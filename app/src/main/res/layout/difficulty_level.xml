<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/difficulty_background">

    <TextView
        android:id="@+id/difficultyDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back!"
        android:textSize="40dp"
        android:fontFamily="@font/thegrinch"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your difficulty level"
        android:layout_gravity="center_horizontal"
        android:textSize="40sp"
        android:fontFamily="@font/simonlovely"
        android:layout_marginTop="120dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        >
            <androidx.cardview.widget.CardView
                android:id="@+id/normalCard"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardBackgroundColor="#8BC34A"
                app:cardCornerRadius="300dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/normal_mode"
                    />
            </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/intermediateCard"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardBackgroundColor="#DCFFEB3B"
            app:cardCornerRadius="300dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            >
            <ImageView
                android:id="@+id/intermediate"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/intermediate_mode"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/hardCard"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardBackgroundColor="#FF9800"
            app:cardCornerRadius="300dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"

            >
            <ImageView
                android:id="@+id/hard"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/hard_mode"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="38dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intermediate"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="66dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="70dp"
            />
    </LinearLayout>



</LinearLayout>